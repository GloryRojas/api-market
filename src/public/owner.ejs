<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/style.css">
    <title>Document</title>
</head>
<body>
        <div id="App">
                <!--ESTO ES DEL NAV-->
                <div class="nav">
                    <div class="nav-container">
        
                        <div class="nav-contain">
                            <div class="logo-container">
                                <div class="logo-contain">
                                    API PRODUCT
                                </div>
                            </div>
                        </div>
                        <div class="user">
                            <button @click="popupActive">Seleccionar usuario</button>
                            <button @click="formularioProductoActive">Agregar producto</button>
                        </div>
                    </div>
                </div>

                <% data.forEach(function(product){ %>
                    
                    <div class="product">
                            <div class="product-container">
                                <div class="product-contain">
                                    <p>id : <%= product._id %></p>
                                    <p>name : <%= product.name %></p>
                                    <p>price : <%= product.price %></p>
                                    <p>description : <%= product.description %></p>
                                    <div class="buttons">
                                        <button  @click="addproduct" class="edit"> EDITAR</button>
                                        <button  class="delete"> ELIMINAR</button>
                                    </div>
                                </div>
                            </div>
                        </div>
        
                    <% }) %>

                <!-- popup editar producto -->

                <div class="editProuduct">
                    <div class="popup-alert" v-show="edit"  @click="addproduct">
                        <div class="popup">
                             <div class="popup-add-container" @click = "propagation">
                                <form method="POST">
                                    <div class="popup-content">
                                        <h1>Editar Producto</h1>
                                        codigo: <input type="text" name="id" value="aqui va el id" />
                                        nombre: <input type="text" placeholder="ingrese nombre" name="name" />
                                        precio: <input type="text" placeholder="ingrese precio" name="price" />
                                        descripcion: <input type="text" placeholder="ingrese descripcion" name="description" />
                                        <button type="submit" >Editar</button>
                                    </div>
                                </form>
                             </div>
                        </div>     
                    </div>
                </div>

                <!-- Aqui termina popup editar producto -->

              <div class="popupProductForm">
                    <div class="popupInsertWord-content">
                        <div class="popup-alert" v-show="FormularioProducto" v-on:click="formularioProductoActive()">
                            <div class="about">
                                <div class="popup">
                                    <div class="popup-container" v-on:click="formulario">
                                        <form method="POST">
                                            <div class="popup-contain">
                                                <h1>INGRESAR NUEVO PRODUCTO</h1>
                                                nombre: <input type="text" placeholder="ingrese nombre" name="name" />
                                                precio: <input type="text" placeholder="ingrese precio" name="price" />
                                                descripcion: <input type="text" placeholder="ingrese descripcion" name="description" />
                                                <button type="submit" >Agregar productos</button>
                                            </div>
                                        </form>
            
                                    </div>
                                </div>
                            </div>
                        </div>
            
                    </div>
                </div>

                <div class="popupInsertWord">
                        <div class="popupInsertWord-content">
                            <div class="popup-alert" v-show="popup" v-on:click="popupActive()">
                                <div class="about">
                                    <div class="popup">
                                        <div class="popup-container" v-on:click="propagation">
                                            <form @submit="getOwner" method="GET">
                                                <div class="popup-contain">
                                                    <h1>Ingrese el Owner_id</h1>
                                                    <input type="text" placeholder="ingrese numero de owner" name="owner" />
                                                    <button type="submit" v-on:click="popupActive()">INGRESAR AL API</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
            </div>    

            <script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>
            <script src="/index.js"></script>
            
</body>
</html>